generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
// Blueprint untuk tabel "Book"
model Book {
  id          String   @id @default(uuid())
  title       String
  author      String
  year        Int
  coverImage  String?  // Tanda '?' berarti 'opsional', boleh kosong
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}